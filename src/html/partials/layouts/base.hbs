<!doctype html>
<html {{#if country}}class="{{country}}"{{/if}} lang="en-gb">
	<head>
		{{!-- Main meta tags pulled in here... --}}
		{{> includes/core/meta }}

		<title>{{ title }} | BWT</title>
		{{#if description}}<meta name="description" content="{{ description }}">{{/if}}

		{{!-- Main styles pulled in here... --}}
		{{> includes/core/styles }}
		{{#> styles-block}}
			{{!-- Custom styles per page can be added if needed. --}}
		{{/styles-block}}

		{{!-- Favicons and Progressive Web App manifest --}}
		{{> includes/core/favicon-pwa }}
	</head>
	<body {{#if pageClass}}class="{{pageClass}}{{#if pageNav}} {{pageNav}}{{/if}}"{{/if}}>

		<header>
			{{#> header-block}}
				{{!--
					The `includes/core/header` partial is the default content,
					but can be overridden.
				--}}
				{{> includes/core/header }}
			{{/header-block}}
		</header>

		<main>
			{{#> main-block}}
				{{!-- Main content goes here. --}}
			{{/main-block}}
		</main>

		<footer>
			{{#> footer-block}}
				{{!--
					The `includes/core/footer` partial is the default content,
					but can be overridden.
				--}}
				{{> includes/core/footer }}
			{{/footer-block}}
		</footer>

		{{!-- Main JS scripts pulled in here... --}}
		{{> includes/core/scripts }}
		{{#> scripts-block}}
			{{!-- Custom scripts per page can be added if needed. --}}
		{{/scripts-block}}

		{{!-- Helps offline content experience... --}}
		{{> includes/core/service-worker }}
	</body>
</html>
